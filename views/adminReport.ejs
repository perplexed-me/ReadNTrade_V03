<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Report Panel</title>
    <link rel="stylesheet" href="/admin_reportStyle.css">
</head>

<body>
    <!-- Admin Section -->
    <div class="admin-section">
        <h2>Admin Panel</h2>
        <button onclick="fetchReports()">View All Reports</button>
        <div id="reports"></div>
    </div>

    <script>
        function fetchReports() {
            fetch('/admin/reports')
                .then(response => response.json())
                .then(data => {
                    const reportsDiv = document.getElementById('reports');
                    reportsDiv.innerHTML = '';

                    data.forEach(report => {
                        const reportDiv = document.createElement('div');
                        reportDiv.innerHTML = `
                    Reported User: ${report[1]}, 
                    Reporter: ${report[2]}, 
                    Cause: ${report[3]}
                    <button onclick="sendWarning(${report[1]})">Send Warning</button>
                    <button onclick="removeReport(${report[0]})">Remove</button>
                `;
                        reportsDiv.appendChild(reportDiv);
                    });
                })
                .catch(error => {
                    console.error("Error fetching reports:", error);
                    alert('Error fetching reports. Check the console for more details.');
                });
        }

        function sendWarning(userId) {
            // Logic to send warning to the user with userId
            console.log(`Sending warning to user ${userId}`);
            // Example: You can make an API call here to send the warning
        }

        function removeReport(reportId) {
            // Logic to remove the report with reportId
            console.log(`Removing report ${reportId}`);
            // Example: You can make an API call here to delete the report
        }

    </script>
</body>

</html>